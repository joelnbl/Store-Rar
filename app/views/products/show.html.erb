<div class="container mt-6">
  <% cache @product do %>
    <h1 class="title is-2"><%= @product.name %></h1>
    <%= @product.description %>
    <%= image_tag @product.featured_image, class: "product-image", style: "max-width: 200px; height: auto;" if @product.featured_image.attached? %>

  <% end %>
  <div class="buttons mt-4">
    <%= link_to "Back", products_path, class: "button is-light" %>
    <% if authenticated? %>
    <%= link_to "Edit", edit_product_path(@product), class: "button is-link" %>
    <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "button is-danger" %>
    <% end %>
  </div>
</div>